<%- include('partials/header') %>
<section class="hero">
    <article class="hero__content container">
        <h3 class="hero__title">Nuevos Ingresos</h3>
        <p class="hero__text">Descubrí el próximo Funko Pop de tu colección</p>
        <a class="hero__link" href="/shop">SHOP</a>
    </article>
</section>
<main class="main-container">
    <% collections.forEach(collection => { %>
    <section class="collection container">
        <article class="collection__content">
            <h3 class="collection__title"><%= collection.product_name %></h3>
            <p class="collection__text"><%= collection.product_description %></p>
            <a class="collection__link" href="/shop/filter-licence/<%= collection.licence_name %>">VER COLECCIÓN</a>
        </article>
        <picture class="collection__cover">
            <img src="<%= collection.img_front %>" alt="<%= collection.product_name %>">
        </picture>
    </section>
    <% }); %>
    <%- include('components/slider') %>
</main>
<script src="https://cdn.jsdelivr.net/npm/@glidejs/glide/dist/glide.min.js"></script>
<script src="/js/glide.js"></script>

<%- include('partials/footer') %>